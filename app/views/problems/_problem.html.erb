<li class='list'>
  <%= link_to problem_path(problem.id) do %>
  <div class='item-img-content'>
    <% if problem.grade_id == 2%>
      <%= image_tag "function-1.png", class: "item-img" %>
    <% elsif problem.grade_id == 3%>
      <%= image_tag "function-2.png", class: "item-img" %>
    <% elsif problem.grade_id == 4%>
      <%= image_tag "function-3.png", class: "item-img" %>
    <% elsif problem.grade_id == 5%>
      <%= image_tag "function1.png", class: "item-img" %>
    <% elsif problem.grade_id == 6%>
      <%= image_tag "function2.png", class: "item-img" %>
    <% elsif problem.grade_id == 7%>
      <%= image_tag "function3.png", class: "item-img" %>
    <% end%>
  </div>
  <div class='item-info'>
    <h3 class='item-name'>
      <%= problem.title %>
    </h3>
    <div class='item-price'>
      <div class='star-btn'>
        <%= image_tag "star.png", class:"star-icon" %>
        <span class='star-count'>0</span>
      </div>
    </div>
  </div>
  <% end %>
</li>