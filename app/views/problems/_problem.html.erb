<li class='list'>
  <%= link_to problem_path(problem.id) do %>
  <div class='item-img-content'>
    <%= image_tag problem.image, class: "item-img" %>
    <% if problem.relation%>
      <div class='sold-out'>
        <span>Sold Out!!</span>
      </div>
    <% end%>
  </div>
  <div class='item-info'>
    <h3 class='item-name'>
      <%= item.name %>
    </h3>
    <div class='item-price'>
      <span><%= item.price %>円<br>(税込み)</span>
      <div class='star-btn'>
        <%= image_tag "star.png", class:"star-icon" %>
        <span class='star-count'>0</span>
      </div>
    </div>
  </div>
  <% end %>
</li>